{% extends 'base.html.twig' %}
{% block title %} Factures {% endblock %}
{% block header %} {{ include('parts/_header.html.twig') }} {% endblock %}
{% block body %}

        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nom Client</th>
                        <th scope="col">Arrivée</th>
                        <th scope="col">Départ</th>
                        <th scope="col">Lien</th>
                    </tr>
                </thead>

                <tbody>
                    {% for bill in bills %}
                    <tr>
                        <th>{{ bill.id }}</th>
                        <th>{{ bill.lastname }}</th>
                        <th>{{ bill.checkIn|date("m/d/Y") }}</th>
                        <th>{{ bill.checkOut|date("m/d/Y") }}</th>
                        <th>
                            <a href={{ path('bill_details', {id: bill.id}) }}>
                                <i class="fa-solid fa-eye"></i>
                            </a>
                        </th>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

{% endblock %}